<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.citrushack2016.painter.CanvasView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/canvas_view"
        ></com.citrushack2016.painter.CanvasView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FAB_anchor"
        android:src="@drawable/ic_target_white_24dp"
        android:layout_above="@+id/FAB_expand_menu"
        android:layout_alignStart="@+id/FAB_expand_menu"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        android:clickable="false"
        android:backgroundTint="@color/colorAccentLight" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FAB_clear"
        android:src="@drawable/ic_eraser_white_24dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        android:clickable="false"
        android:backgroundTint="@color/colorAccentLight"
        android:layout_above="@+id/FAB_anchor"
        android:layout_alignStart="@+id/FAB_anchor" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FAB_save"
        android:src="@drawable/ic_content_save_white_24dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        android:clickable="false"
        android:backgroundTint="@color/colorAccentLight"
        android:layout_above="@+id/FAB_clear"
        android:layout_alignStart="@+id/FAB_clear" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_menu_up_white_24dp"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/FAB_expand_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp" />


</RelativeLayout>
